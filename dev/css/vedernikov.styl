/*** Preloader ***/
.page-preloader
	position fixed
	z-index 9999

	display block
	width 100%
	height 100%

	background-color #282828

	transition background-color .8s $transitionAnimation, transform .8s $transitionAnimation

	.page-preloader-logo
		position absolute
		top 50%
		transform translateY(-50%)

		width 100%
		height 240px

		opacity 0

		transition opacity .5s $transitionAnimation, transform .5s $transitionAnimation

		svg
			margin 0 auto

			display block

			path
				fill #FFF

	.page-preloader-spinner
		position absolute
		left 50%
		top 50%
		margin 140px 0 0 -25px

		box-sizing border-box
		width 50px
		height 50px

		border 4px solid #9b9b9b
		border-top-color #282828
		border-radius 50%
		opacity 0

		transition opacity .5s $transitionAnimation, transform .5s $transitionAnimation
		transition-delay .3s

	&.active
		.page-preloader-logo
			opacity 1

		.page-preloader-spinner
			opacity 1

			animation spin 2.2s linear infinite

	&.disabled
		background-color rgba(0, 0, 0, 0)

		transition-delay .3s

		.page-preloader-logo
			transform translateY(-236px)

			transition-delay .3s

		.page-preloader-spinner
			opacity 0

			transition-delay 0s
			
