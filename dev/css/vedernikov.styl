@import "nib"

/*** Reset ***/
global-reset();
reset-html5();
form-reset();

b
strong
i
em
	font-style normal
	font-weight normal
/*** //Reset ***/


/*** Fonts ***/
@font-face
	font-family "NotoSerifRegular"
	src url("../fonts/NotoSerif-Regular.woff") format("woff")

@font-face
	font-family "NotoSerifItalic"
	src url("../fonts/NotoSerif-Italic.woff") format("woff")

@font-face
	font-family "NotoSerifBold"
	src url("../fonts/NotoSerif-Bold.woff") format("woff")

@font-face
	font-family "NotoSerifBoldItalic"
	src url("../fonts/NotoSerif-BoldItalic.woff") format("woff")

@font-face
	font-family "Elizabeth"
	src url("../fonts/ElizabethC.woff") format("woff")

@font-face
	font-family "ElizabethItalic"
	src url("../fonts/ElizabethC-Italic.woff") format("woff")
/*** //Fonts ***/


/*** Vars ***/
$colorText = #000
$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)
/*** //Vars ***/


/*** Base ***/
html
body
	height 100%

body
	min-height 100%
	font-family "NotoSerifRegular"
	line-height 1
	color $colorText
	cursor default

.page
	width 100%
	min-height 100%
	min-width 1200px
	overflow hidden

.page-inner
	margin 0 auto

	box-sizing border-box

	&--relative
		position relative

	&--w0
		max-width 100%
		padding 0 50px

	&--w1
		max-width 1300px
		padding 0 30px

	&--w2
		max-width 930px

	&--half
		margin 0

		width 60%
		min-width 840px

	&--cleared
		clearfix()

.page-content
	padding 0
/*** //Base ***/


/*** Content ***/
.link
	text-decoration none

	&[href*=tel]
	/[href*=tel]
		text-decoration none
		color inherit

img
	&.resize
		width 100%
		height auto
/*** //Content ***/


/*** Header ***/
.page-header
	position fixed
	z-index 200
	left 0
	top 0

	display block
	width 100%
	padding 20px 0

	&.show
		.header-logo
			opacity 1

			transform translateY(0)

.header-logo
	position relative
	z-index 1010
	float left

	display block
	width 200px
	height 55px
	overflow hidden

	text-decoration none

	opacity 0

	transform translateY(-100%)

	transition opacity .6s $transitionAnimation, transform .6s $transitionAnimation

	svg
		display block
		width 100%
		height auto
		max-width 100%
		max-height 100%

		path
			fill #000

			transition fill 0.3s $transitionAnimation

	&.background--dark
		svg
			path
				fill #FFF

		+ .header-menu-burger
			&:before
			&:after
			.header-menu-burger-inner
				background-color #FFF

.header-menu-burger
	float right
	position relative
	z-index 1010
	top 10px

	display block
	width 30px
	height 23px

	cursor pointer

	transform translateZ(0)

	.header-menu-burger-inner
		position absolute
		left 0
		top 50%
		margin-top -1px

		width 100%
		height 2px

		background-color #000

		transition opacity .3s cubic-bezier(0.250, 0.460, 0.450, 0.940), background-color .3s cubic-bezier(0.250, 0.460, 0.450, 0.940)

	&:before
	&:after
		content ""

		position absolute
		left 0

		display block
		width 100%
		height 2px

		background-color #000

		transition transform 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940), background-color 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940), height 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940), width 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940)

	&:before
		top 0

	&:after
		bottom 0

	&.active
		.header-menu-burger-inner
			opacity 0

		&:before
			transform rotate(-45deg) translateY(5px) translateX(-9px)

		&:after
			transform rotate(45deg) translateY(-5px) translateX(-9px)

.panel
	position fixed
	left 0
	top 0
	z-index 190

	box-sizing border-box
	display none
	width 100%
	height 100%
	padding 50px

	.panel-inner
		position relative
		z-index 20

		opacity 0

		transform translateY(-50px)

		transition transform .3s $transitionAnimation, opacity .3s $transitionAnimation
		transition-delay 0s

	.panel-bg
		position absolute
		left 0
		top 0
		right 0
		bottom 0
		z-index 10

		background #FFF url("../dummy/panel.png") no-repeat center center
		background-size cover
		opacity 0

		transform scale(0.8)

		transition transform .3s $transitionAnimation, opacity .3s $transitionAnimation
		transition-delay .2s

&.show-menu
	.panel
		.panel-bg
			opacity 1

			transform scale(1)

			transition-delay 0s

		.panel-inner
			opacity 1

			transform translateY(0)

			transition-delay .2s

.header-lang
	margin-bottom 100px

	text-align center

	.header-lang-item
		margin-right 15px

		display inline-block

		border-bottom 1px solid #000

		color #000
		text-decoration none
		line-height 1.05

		transition color .3s $transitionAnimation, border-bottom-color .3s $transitionAnimation

		&:last-child
			margin-right 0

		&:hover:not(.header-lang-item--current)
			border-bottom-color #BAA079

			color #BAA079

		&--current
			border-bottom-color transparent

			color #000

.header-menu
	text-align center

	.header-menu-item-holder
		margin-bottom 45px

		&:last-child
			margin-bottom 0

	.header-menu-item
		display inline-block

		font-size 60px
		color #000
		text-decoration none
		font-family "Elizabeth"
		letter-spacing 2px

		transition color .3s $transitionAnimation

		&:hover
			color #BAA079
/*** //Header ***/

/*** Footer ***/
.page-footer
	padding 0

	.footer-row
		overflow hidden

		background-color #282828

		&--black
			padding 30px 0

			background-color #1D1D1D

		&--info
			padding 55px 0

			text-align center

.footer-menu
	float left
	margin-top 55px

	width 30%

	text-align left

	.footer-menu-item-holder
		margin-bottom 25px

		&:last-child
			margin-bottom 0

	.footer-menu-item
		display inline-block

		font-size 14px
		line-height 1.05
		color #9B9B9B
		text-decoration none

		transition color .3s $transitionAnimation

		&:hover
			color #BAA079

.footer-info
	display inline-block

	text-align center

	.footer-logo
		margin 0 auto 30px auto

		width 220px
		height 150px
		overflow hidden

		background url("../svg/logo_gray.svg") no-repeat center center
		background-size contain

		text-indent -9999px

	.footer-contacts
		font-size 14px
		color #9B9B9B
		line-height 2.6

		a:not([href*=tel])
			display inline-block

			border-bottom 1px solid #9B9B9B

			color #9B9B9B
			font-size 16px
			text-decoration none
			line-height 1.05

			transition color .3s $transitionAnimation, border-bottom-color .3s $transitionAnimation

			&:hover
				border-bottom-color #BAA079

				color #BAA079

.footer-social
	float right
	margin-top 55px

	width 30%

	text-align right

	.footer-social-inner
		display inline-block

		text-align center

	.footer-social-title
		margin-bottom 18px

		color #9B9B9B
		font-size 14px

	.footer-social-item
		vertical-align middle
		margin-right 18px

		display inline-block
		width 32px
		height 32px
		overflow hidden

		path
			transition fill .3s $transitionAnimation

			fill #9B9B9B

		&:last-child
			margin-right 0

		&:hover
			path
				fill #BAA079

.footer-copyrights
	float left

	font-size 14px
	color #9B9B9B

.footer-creators
	float right

	color #9B9B9B
	font-size 14px
	text-decoration none

	span
		letter-spacing 3px

		transition color .3s $transitionAnimation

	&:hover
		span
			color #BAA079
/*** //Footer ***/


/*** Content ***/
.btn
	position relative

	display inline-block
	overflow hidden

	line-height 1.05
	text-align center
	text-decoration none

	&:after
		content ""

		position absolute
		z-index 10
		left 0
		top 0

		display block
		width 100%
		height 100%

		opacity 0

		transform translateX(-100%)

		transition transform .3s $transitionAnimation, opacity .3s $transitionAnimation

	&--orange
		padding 12px 22px

		border 1px solid #BAA079

		font-size 14px
		color #BAA079
		text-transform uppercase
		letter-spacing 2px

		transition color .3s $transitionAnimation, background-color .3s $transitionAnimation

		span
			position relative
			z-index 20

			transition color .3s $transitionAnimation

			transition-delay .2s

		&:after
			background-color #BAA079

		&:hover
			transform translateY(0)

			span
				color #FFF

			&:after
				opacity 1

				transform translateX(0)
/*** //Content ***/


/*** Intro ***/
.intro
	position relative

	min-height 500px
	height 100vh
	overflow hidden

	.intro-bg
		position absolute
		z-index 10

		display block
		width 100%
		height 100%

		background url("../dummy/intro2.jpg") no-repeat center top
		background-size cover

		transform scale(1)

		transition transform .6s $transitionAnimation

	.intro-inner
		position absolute
		z-index 20
		left 50%
		top 50%
		transform translate(-50%, -50%)

		width 900px

	.intro-logo
		margin-bottom 80px

		height 240px
		overflow hidden

		background url("../svg/logo_white.svg") no-repeat center center
		background-size contain
		opacity 0

		text-indent -9999px

	.intro-text
		opacity 0

		font-family "ElizabethItalic"
		font-size 70px
		line-height 76px
		color #FFF
		text-align center

		transform translateY(20px)

		transition transform .5s $transitionAnimation, opacity .5s $transitionAnimation
		transition-delay 0.5s

.loaded
	.intro
		.intro-bg
			transform scale(1.05)

		.intro-logo
			opacity 1

		.intro-text
			opacity 1

			transform translateY(0)
/*** //Intro ***/


/*** Sections ***/
.sections
	overflow hidden

.section-item
	position relative

	box-sizing border-box
	display block
	width 50%
	overflow hidden

	&:after
		content ""

		display block
		padding-top 72%

	&:first-child
		float left

	&:last-child
		float right

	.section-item-photo-holder
		position absolute
		left 0
		top 0

		display block
		width 100%
		height 100%
		overflow hidden

		background-size cover
		background-repeat no-repeat
		background-position center center

		transition transform .6s $transitionAnimation, opacity .6s $transitionAnimation

		&:before
			content ""

			position absolute
			left 0
			top 0

			display block
			width 100%
			height 100%

			background-color rgba(0, 0, 0, 0)

			transition background-color .6s $transitionAnimation

	.section-item-title
		position absolute
		top 50%
		transform translateY(-50%)

		box-sizing border-box
		display block
		width 100%
		padding 0 40px

		.section-item-title-top
			position relative
			transform translateY(50px)

			font-family "Elizabeth"
			text-align center
			color #FFF
			font-size 60px
			line-height 1.05

			transition transform .6s $transitionAnimation

		.section-item-title-description
			max-width 50%
			margin 0 auto

			opacity 0
			//transform translateY(10px)

			font-size 16px
			line-height 1.8
			color #FFF
			text-align center

			transition transform .6s $transitionAnimation, opacity .6s $transitionAnimation

	&--shadow
		.section-item-photo-holder
			&:after
				content ""

				position absolute
				left 0
				top 0
				bottom 0
				right 0

				display block

				background-color rgba(0, 0, 0, 0)

	&--bottom
		.section-item-title
			left 0
			top auto
			bottom 40px
			transform none

			.section-item-title-top
				margin-bottom 0
				top 0
				transform translateY(0)

				font-size 44px
				line-height 1.1
				text-align left

	&:hover
		.section-item-photo-holder
			transform scale(1.05)

			&:before
				background-color rgba(0, 0, 0, 0.3)

		.section-item-title
			.section-item-title-top
				transform translateY(-10px)

			.section-item-title-description
				opacity 1
				transition-delay .3s

	&--bottom
		&:hover
			.section-item-title
				.section-item-title-top
					transform translateY(0)
/*** //Sections ***/


/*** Cats ***/
.cats
	font-size 0

.cat-item
	position relative

	box-sizing border-box
	display inline-block
	width (100/3)%
	overflow hidden

	text-decoration none

	&:after
		content ""

		display block
		padding-top 70%

	.cat-item-bg
		position absolute
		left 0
		top 0
		z-index 10

		display block
		width 100%
		height 100%

		background-position center center
		background-repeat no-repeat
		background-size cover

		transition transform .6s $transitionAnimation, opacity .6s $transitionAnimation

		&:before
			content ""

			position absolute
			left 0
			top 0

			display block
			width 100%
			height 100%

			background-color rgba(0, 0, 0, 0.4)

	.cat-item-inner
		position absolute
		left 30px
		top 30px
		right 30px
		bottom 30px
		z-index 20

	.cat-item-section
		position absolute
		left 0
		top 0

		display block

		font-size 16px
		color #FFF
		text-transform uppercase
		letter-spacing 2px

	.cat-item-title
		position absolute
		left 0
		bottom 0

		display block

		font-family "Elizabeth"
		font-size 32px
		line-height 36px
		color #FFF

	&:hover
		.cat-item-bg
			transform scale(1.05)

			&:before
				background-color rgba(40, 40, 40, 0.7)
/*** //Cats ***/


/*** Wine ***/
.wine
	position relative

	height 900px
	overflow hidden

	background url("../dummy/wine_bg.png") no-repeat center center
	background-size cover

	.wine-item-holder
		position absolute

		.wine-item
			position absolute

			display block
			width 340px
			height 1050px

			background-position center center
			background-size contain
			background-repeat no-repeat

		&--lt
			left 10%
			top -200px

			.wine-item
				transform rotate(-155deg)

				background-image url("../dummy/wine/lt.png")

		&--rt
			right 38%
			top -200px

			.wine-item
				transform rotate(-155deg)

				background-image url("../dummy/wine/rt.png")

		&--lb
			left 21%
			bottom 820px

			.wine-item
				transform rotate(25deg)

				background-image url("../dummy/wine/lb.png")

		&--rb
			right 26%
			bottom 820px

			.wine-item
				transform rotate(25deg)

				background-image url("../dummy/wine/rb.png")

.wine-inner
	position absolute
	left 50%
	top 50%
	transform translate3d(-50%, -50%, 0)

	box-sizing border-box
	display block
	width 100%
	overflow hidden

	text-align center

.wine-title
	margin-bottom 20px

	font-family "Elizabeth"
	color #4A4A4A
	font-size 70px

.wine-description
	margin-bottom 25px

	font-size 16px
	line-height 32px
/*** //Wine ***/


/*** News ***/
.news
	padding 80px 0 220px 0

	background-color #F8F6F2

	.news-title
		margin-bottom 80px

		color #4A4A4A
		font-size 44px
		font-family "Elizabeth"
		text-align center

.news-items
	font-size 0

.news-item
	vertical-align top
	position relative
	margin 0 4% 50px 0

	display inline-block
	width 48%

	text-decoration none

	&:nth-child(2n)
		margin-right 0

	&:after
		content ""

		display block
		width 100%
		padding-top (40/58*100)%

	.news-item-photo-holder
		position absolute
		left 0
		top 0
		z-index 10

		display block
		width 100%
		height 100%
		overflow hidden

		transform translateZ(0)

	.news-item-photo
		position absolute
		left 0
		top 0

		display block
		width 100%
		height 100%

		background-position center center
		background-repeat no-repeat
		background-size cover

		transition transform .6s $transitionAnimation, opacity .6s $transitionAnimation

		&:after
			content ""

			position absolute
			left 0
			top 0

			display block
			width 100%
			height 100%

			background-color rgba(0, 0, 0, 0)

	.news-item-panel
		position absolute
		z-index 20
		left 10%
		top 72%

		box-sizing border-box
		display block
		width 80%
		padding 40px 30px

		background-color rgba(255, 255, 255, 0.9)

		text-align center

	.news-item-date
		margin-bottom 25px

		color #4A4A4A
		font-size 16px

	.news-item-name
		font-size 32px
		line-height 36px
		font-family "Elizabeth"
		color #333333

		transition color .6s $transitionAnimation

	&:hover
		.news-item-photo
			transform scale(1.05)

			&:before
				background-color rgba(0, 0, 0, 0.2)

		.news-item-name
			color #baa079
/*** //News ***/


/*** Preloader ***/
.page-preloader
	position fixed
	z-index 9999

	display block
	width 100%
	height 100%

	background-color #282828

	transition background-color .8s $transitionAnimation, transform .8s $transitionAnimation

	.page-preloader-logo
		position absolute
		top 50%
		transform translateY(-50%)

		width 100%
		height 240px

		opacity 0

		transition opacity .5s $transitionAnimation, transform .5s $transitionAnimation

		svg
			margin 0 auto

			display block

			path
				fill #FFF

	.page-preloader-spinner
		position absolute
		left 50%
		top 50%
		margin 140px 0 0 -25px

		box-sizing border-box
		width 50px
		height 50px

		border 4px solid #9b9b9b
		border-top-color #282828
		border-radius 50%
		opacity 0

		transition opacity .5s $transitionAnimation, transform .5s $transitionAnimation
		transition-delay .3s

	&.active
		.page-preloader-logo
			opacity 1

		.page-preloader-spinner
			opacity 1

			animation spin 2.2s linear infinite

	&.disabled
		background-color rgba(0, 0, 0, 0)

		transition-delay .3s

		.page-preloader-logo
			transform translateY(-236px)

			transition-delay .3s

		.page-preloader-spinner
			opacity 0

			transition-delay 0s

@keyframes spin
	0%
		transform rotate(0deg)

	50%
		transform rotate(360deg)

	100%
		transform rotate(0deg)
/*** //Preloader ***/


/*** Animation ***/
[data-animationtype=fadeIn]
	opacity 0

	transition opacity 1s cubic-bezier(0.250, 0.460, 0.450, 0.940)

	&.animated
		opacity 1

[data-animationtype=zoomIn]
	opacity 1

	transition opacity 1s cubic-bezier(0.250, 0.460, 0.450, 0.940), transform 1s cubic-bezier(0.250, 0.460, 0.450, 0.940)

	&:before
		content ""

		position absolute
		left 0
		top 0

		display block
		width 100%
		height 100%

		background-color rgba(40, 40, 40, 0.9)

		transition background-color .6s cubic-bezier(0.250, 0.460, 0.450, 0.940)

	&.animated
		&:before
			background-color rgba(40, 40, 40, 0)

[data-animationtype=slideTop]
	opacity 0
	transform translateY(50px)

	transition opacity .5s cubic-bezier(0.250, 0.460, 0.450, 0.940), transform .5s cubic-bezier(0.250, 0.460, 0.450, 0.940)

	&.animated
		opacity 1
		transform translateY(0)

		&.section-item-title
			transform translateY(-50%)

[data-animationtype=wine]
	.wine-item-holder
		&--lt
			opacity 0
			transform translate(150px, -150px)

			transition opacity .6s cubic-bezier(0.250, 0.460, 0.450, 0.940), transform .6s cubic-bezier(0.250, 0.460, 0.450, 0.940)

		&--rt
			opacity 0
			transform translate(150px, -150px)

			transition opacity .6s cubic-bezier(0.250, 0.460, 0.450, 0.940), transform .6s cubic-bezier(0.250, 0.460, 0.450, 0.940)
			transition-delay .4s

		&--lb
			opacity 0
			transform translate(-150px, 150px)

			transition opacity .6s cubic-bezier(0.250, 0.460, 0.450, 0.940), transform .6s cubic-bezier(0.250, 0.460, 0.450, 0.940)
			transition-delay .8s

		&--rb
			opacity 0
			transform translate(-150px, 150px)

			transition opacity .6s cubic-bezier(0.250, 0.460, 0.450, 0.940), transform .6s cubic-bezier(0.250, 0.460, 0.450, 0.940)
			transition-delay 1.2s

	&.animated
		.wine-item-holder
			opacity 1
			transform translateY(0)

[data-animationtype=footer]
	.footer-menu
	.footer-info
	.footer-social
		opacity 0

		transform translateY(-20px)

		transition opacity .4s cubic-bezier(0.250, 0.460, 0.450, 0.940), transform .4s cubic-bezier(0.250, 0.460, 0.450, 0.940)

	.footer-copyrights
	.footer-creators
		opacity 0

		transition opacity .4s cubic-bezier(0.250, 0.460, 0.450, 0.940)
		transition-delay .9s

	.footer-info
		transition-delay .3s

	.footer-social
		transition-delay .6s

	&.animated
		.footer-menu
		.footer-info
		.footer-social
		.footer-copyrights
		.footer-creators
			opacity 1

			transform translateY(0)
/*** //Animation ***/
