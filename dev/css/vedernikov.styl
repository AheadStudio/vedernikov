@import "nib"
@import "../lib/css/css"

/*** Reset ***/
global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal
/*** //Reset ***/



/*** Fonts ***/
@font-face
	font-family "NotoSerifRegular"
	src url("../fonts/NotoSerif-Regular.woff") format("woff")

@font-face
	font-family "NotoSerifItalic"
	src url("../fonts/NotoSerif-Italic.woff") format("woff")

@font-face
	font-family "NotoSerifBold"
	src url("../fonts/NotoSerif-Bold.woff") format("woff")

@font-face
	font-family "NotoSerifBoldItalic"
	src url("../fonts/NotoSerif-BoldItalic.woff") format("woff")

@font-face
	font-family "Elizabeth"
	src url("../fonts/ElizabethC.woff") format("woff")

@font-face
	font-family "ElizabethItalic"
	src url("../fonts/ElizabethC-Italic.woff") format("woff")
/*** //Fonts ***/



/*** Vars ***/
$colorText = #000
$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)
/*** //Vars ***/



/*** Base ***/
html
body
	height 100%

body
	min-height 100%
	font-family "NotoSerifRegular"
	line-height 1
	color $colorText
	cursor default

.page
	width 100%
	min-height 100%
	min-width 1200px
	overflow hidden

.page-inner
	margin 0 auto

	box-sizing border-box
	width 100%

	&--relative
		position relative

	&--w0
		max-width 2000px
		padding 0 50px
		
	&--w1
		max-width 2000px
		padding 0 100px

	&--w2
		max-width 1300px
		padding 0 30px

	&--w3
		max-width 930px
		
	&--w4
		max-width 800px

	&--half
		margin 0

		width 60%
		min-width 840px

	&--cleared
		clearfix()

.page-content
	padding 0
/*** //Base ***/



/*** Header ***/
.page-header
	position fixed
	z-index 200
	left 0
	top 0

	display block
	width 100%
	padding 20px 0

	&.show
		.header-logo
			opacity 1

			transform translateY(0)

.header-logo
	position relative
	z-index 1010
	float left

	display block
	width 200px
	height 55px
	overflow hidden

	text-decoration none

	opacity 0

	transform translateY(-100%)

	transition opacity .6s $transitionAnimation, transform .6s $transitionAnimation

	svg
		display block
		width 100%
		height auto
		max-width 100%
		max-height 100%

		path
			fill #000

			transition fill 0.3s $transitionAnimation

	&.background--dark
		svg
			path
				fill #FFF

		+ .header-menu-burger
			&:before
			&:after
			.header-menu-burger-inner
				background-color #FFF

.header-menu-burger
	float right
	position relative
	z-index 1010
	top 15px

	display block
	width 30px
	height 23px

	cursor pointer

	transform translateZ(0)

	.header-menu-burger-inner
		position absolute
		left 0
		top 50%
		margin-top -1px

		width 100%
		height 2px

		background-color #000

		transition opacity .3s cubic-bezier(0.250, 0.460, 0.450, 0.940), background-color .3s cubic-bezier(0.250, 0.460, 0.450, 0.940)

	&:before
	&:after
		content ""

		position absolute
		left 0

		display block
		width 100%
		height 2px

		background-color #000

		transition transform 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940), background-color 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940), height 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940), width 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940)

	&:before
		top 0

	&:after
		bottom 0

	&.active
		.header-menu-burger-inner
			opacity 0

		&:before
			transform rotate(-45deg) translateY(5px) translateX(-9px)

		&:after
			transform rotate(45deg) translateY(-5px) translateX(-9px)

.panel
	position fixed
	left 0
	top 0
	z-index 190

	box-sizing border-box
	display none
	width 100%
	height 100%
	padding 50px

	.panel-inner
		position relative
		z-index 20

		opacity 0

		transform translateY(-50px)

		transition transform .3s $transitionAnimation, opacity .3s $transitionAnimation
		transition-delay 0s

	.panel-bg
		position absolute
		left 0
		top 0
		right 0
		bottom 0
		z-index 10

		background #FFF url("../dummy/panel.png") no-repeat center center
		background-size cover
		opacity 0

		transform scale(0.8)

		transition transform .3s $transitionAnimation, opacity .3s $transitionAnimation
		transition-delay .2s

&.show-menu
	.panel
		.panel-bg
			opacity 1

			transform scale(1)

			transition-delay 0s

		.panel-inner
			opacity 1

			transform translateY(0)

			transition-delay .2s

.header-lang
	margin-bottom 100px

	text-align center

	.header-lang-item
		margin-right 15px

		display inline-block

		border-bottom 1px solid #000

		color #000
		text-decoration none
		line-height 1.05

		transition color .3s $transitionAnimation, border-bottom-color .3s $transitionAnimation

		&:last-child
			margin-right 0

		&:hover:not(.header-lang-item--current)
			border-bottom-color #BAA079

			color #BAA079

		&--current
			border-bottom-color transparent

			color #000

.header-menu
	text-align center

	.header-menu-item-holder
		margin-bottom 45px

		&:last-child
			margin-bottom 0

	.header-menu-item
		display inline-block

		font-size 60px
		color #000
		text-decoration none
		font-family "Elizabeth"
		letter-spacing 2px

		transition color .3s $transitionAnimation

		&:hover
			color #BAA079
/*** //Header ***/



/*** Footer ***/
.page-footer
	padding 0

	.footer-row
		overflow hidden

		background-color #282828

		&--black
			padding 30px 0

			background-color #1D1D1D

		&--info
			padding 55px 0

			text-align center

.footer-menu
	float left
	margin-top 55px

	width 30%

	text-align left

	.footer-menu-item-holder
		margin-bottom 25px

		&:last-child
			margin-bottom 0

	.footer-menu-item
		display inline-block

		font-size 14px
		line-height 1.05
		color #9B9B9B
		text-decoration none

		transition color .3s $transitionAnimation

		&:hover
			color #BAA079

.footer-info
	display inline-block

	text-align center

	.footer-logo
		margin 0 auto 30px auto

		width 220px
		height 150px
		overflow hidden

		background url("../svg/logo_gray.svg") no-repeat center center
		background-size contain

		text-indent -9999px

	.footer-contacts
		font-size 14px
		color #9B9B9B
		line-height 2.6

		a:not([href*=tel])
			display inline-block

			border-bottom 1px solid #9B9B9B

			color #9B9B9B
			font-size 16px
			text-decoration none
			line-height 1.05

			transition color .3s $transitionAnimation, border-bottom-color .3s $transitionAnimation

			&:hover
				border-bottom-color #BAA079

				color #BAA079

.footer-social
	float right
	margin-top 55px

	width 30%

	text-align right

	.footer-social-inner
		display inline-block

		text-align center

	.footer-social-title
		margin-bottom 18px

		color #9B9B9B
		font-size 14px

	.footer-social-item
		vertical-align middle
		margin-right 18px

		display inline-block
		width 32px
		height 32px
		overflow hidden

		path
			transition fill .3s $transitionAnimation

			fill #9B9B9B

		&:last-child
			margin-right 0

		&:hover
			path
				fill #BAA079

.footer-copyrights
	float left

	font-size 14px
	color #9B9B9B

.footer-creators
	float right

	color #9B9B9B
	font-size 14px
	text-decoration none

	span
		letter-spacing 3px

		transition color .3s $transitionAnimation

	&:hover
		span
			color #BAA079
/*** //Footer ***/



/*** Pages ***/
.page-simple
.page-bg
.page-product
	background-color #F8F6F2
	
	.page
		padding-top 100px
	
	.page-header
		position fixed
		z-index 1000
		
		box-sizing border-box
		width 100%
		height 100px
		
		background-color #FFF

.page-bg
	background #F8F6F2 url("../dummy/bgs/simple.png") no-repeat center center
	background-attachment fixed
	
.page-catalog
	background #F8F6F2 url("../dummy/catalog_bg.png") no-repeat center center
	background-attachment fixed
	background-size cover
	
.page-terr
.page-about
	background-color #F8F6F2
	
.page-intro
	.intro
		height 70vh
/*** //Pages ***/



/*** Content ***/
.btn
	position relative

	display inline-block
	overflow hidden

	line-height 1.05
	text-align center
	text-decoration none

	&:after
		content ""

		position absolute
		z-index 10
		left 0
		top 0

		display block
		width 100%
		height 100%

		opacity 0

		transform translateX(-100%)

		transition transform .3s $transitionAnimation, opacity .3s $transitionAnimation

	&--orange
		padding 12px 22px

		border 1px solid #BAA079

		font-size 14px
		color #BAA079
		text-transform uppercase
		letter-spacing 2px

		transition color .3s $transitionAnimation, background-color .3s $transitionAnimation

		span
			position relative
			z-index 20

			transition color .3s $transitionAnimation

			transition-delay .2s

		&:after
			background-color #BAA079

		&:hover
			transform translateY(0)

			span
				color #FFF

			&:after
				opacity 1

				transform translateX(0)
				
	&--white
		padding 12px 22px

		border 1px solid #FFF

		font-size 16px
		color #FFF
		text-transform uppercase
		letter-spacing 3.5px

		transition color .3s $transitionAnimation, background-color .3s $transitionAnimation

		span
			position relative
			z-index 20

			transition color .3s $transitionAnimation

			transition-delay .2s

		&:after
			background-color #FFF

		&:hover
			transform translateY(0)

			span
				color #333

			&:after
				opacity 1

				transform translateX(0)
				
.link
	line-height 1
	text-decoration none
	
	transition .3s border-bottom-color $transitionAnimation, .3s color $transitionAnimation
	
	&[href*=tel]
	/[href*=tel]
		text-decoration none
		color inherit
		
	&--white
		border-bottom 1px solid #FFF

		color #FFF
		
		&:hover
			border-bottom-color transparent

	&--orange
		border-bottom 1px solid #BAA079

		color #BAA079
		
		&:hover
			border-bottom-color transparent
			
	&--black
		border-bottom 1px solid #4A4A4A

		color #4A4A4A
		
		&:hover
			border-bottom-color #BAA079
			
			color #BAA079

img
	&.resize
		width 100%
		height auto

.page-text
	font-size 16px
	color #4A4A4A
	line-height 32px
	
	b
	strong
		font-family "NotoSerifBold"
	
	p
		margin-bottom 15px
		
		&:last-child
			margin-bottom 0

	h1
	/.h1
		margin-bottom 15px

		font-family "Elizabeth"
		font-size 60px
		line-height 60px
		
	h2
	/.h2
		margin-bottom 20px

		font-family "Elizabeth"
		font-size 32px
		line-height 40px
		color #333333
		
	img
		display block
		max-width 50%
		height auto
		
		&[align=left]
			float left
			margin 0 100px 0 0
			
		&[align=right]
			float right
			margin 0 0 0 100px
		
	table
		width 100%
		
		thead
			th
				border-bottom 1px solid #979797

				font-size 12px
				color #4A4A4A
				text-transform uppercase
				line-height 32px
				letter-spacing 1.5px
				
		tbody
			td
				vertical-align top
				
				padding 15px 0
				padding-right 50px

				border-bottom 1px solid #979797
				
				img
					max-width 100%
		
.image
	margin 50px 0
	
	opacity 0
	
	transition .5s opacity $transitionAnimation
	
	&:last-child
		margin-bottom 0
		
	&.animated
		opacity 1
	
	img
		margin 0 auto

		display block
		width 100%
		
.tabs
	margin-bottom 100px

	.tabs-heading
		margin-bottom 45px
		
		.tab-heading-item
			vertical-align middle
			margin-right 15px

			box-sizing border-box
			display inline-block
			padding 11px 20px
			
			border 1px solid transparent
			
			font-size 16px
			color #BAA079
			letter-spacing 3.5px
			text-transform uppercase
			text-decoration none
			
			transition .3s border-color $transitionAnimation
			
			&:last-child
				margin-right 0
				
			&.active
				border-color #BAA079
				
			&:hover
				border-color #BAA079
				
	.tab-content-item
		display none
		
		&.active
			display block
/*** //Content ***/



/*** Forms ***/
.jcf-radio
	position relative
	vertical-align middle

	box-sizing border-box
	display inline-block
	overflow hidden
	
	input
		position absolute
		left 0
		top 0

		display block
		width 100%
		height 100%
		
		opacity 0
		
.jcf-select
	position relative
	
	box-sizing border-box
	display block
	width 100%
	padding 10px 20px
	
	border 1px solid #BAA079
	
	cursor pointer
	
	transition .3s background-color $transitionAnimation
	
	.jcf-select-text
		display block
		padding-right 50px
		
		font-size 16px
		color #BAA079
		line-height 32px
		
	.jcf-select-opener
		position absolute
		right 20px
		top 19px

		width 22px
		height 16px
		
		background url("../svg/select.svg") no-repeat center center
		background-size contain
		
		transition .3s transform $transitionAnimation
		
	&.jcf-drop-active
		background-color #FFF

		.jcf-select-opener
			transform rotate(-180deg)
			
.jcf-select-drop
	z-index 100
	
	box-sizing border-box
	
	background-color #F8F6F2
	border 1px solid #BAA079
	border-top none
	
	.jcf-select-drop-content
		max-height 250px
		overflow scroll
		overflow-x hidden
	
	.jcf-list
	.jcf-list-content
		display block
		
	.jcf-option
		display block
		padding 10px 15px
		
		cursor pointer
		font-size 16px
		color #4A4A4A
		
		transition .3s color $transitionAnimation
		
		&:hover
			color #BAA079
/*** //Forms ***/



/*** Intro ***/
.intro
	position relative

	min-height 500px
	height 100vh
	overflow hidden

	.intro-bg
		position absolute
		z-index 10

		display block
		width 100%
		height 100%

		background url("../dummy/intro2.jpg") no-repeat center top
		background-size cover

		transform scale(1)

		transition transform .6s $transitionAnimation

	.intro-inner
		position absolute
		z-index 20
		left 50%
		top 50%
		transform translate(-50%, -50%)

		width 900px

	.intro-logo
		margin-bottom 80px

		height 240px
		overflow hidden

		background url("../svg/logo_white.svg") no-repeat center center
		background-size contain
		opacity 0

		text-indent -9999px

	.intro-text
		opacity 0

		font-family "ElizabethItalic"
		font-size 70px
		line-height 76px
		color #FFF
		text-align center

		transform translateY(20px)

		transition transform .5s $transitionAnimation, opacity .5s $transitionAnimation
		transition-delay 0.5s
		
	.intro-title
		margin-bottom 30px

		font-family "Elizabeth"
		font-size 100px
		line-height 90px
		color #FFF
		text-align center
		letter-spacing -4px
		
	.intro-note
		margin-top -20px

		font-size 24px
		color #FFF
		line-height 34px
		text-align center
		
	.intro-btn-holder
		text-align center

.loaded:not(.page-intro)
	.intro
		.intro-bg
			transform scale(1.05)

		.intro-logo
			opacity 1

		.intro-text
			opacity 1

			transform translateY(0)
			
.page-hero
	position relative
	
	box-sizing border-box
	padding 60px 0 105px 0
	overflow hidden
	min-height 335px
	
	&:after
		content ""
		
		position absolute
		left 0
		top 0
		z-index 20
		
		display block
		width 100%
		height 100%
		
		background-color rgba(40, 40, 40, 0.8)
	
	.page-hero-bg
		position absolute
		left 0
		top 0
		z-index 10

		display block
		width 100%
		height 100%
		
		object-fit cover
		
	.page-hero-inner
		position relative
		z-index 30
		
		text-align center
		
	.page-hero-title
		padding 0 150px
		
		font-family "Elizabeth"
		font-size 66px
		color #FFF
		line-height 60px
			
.page-heading
	margin-top 100px
	
	padding 5px 0
	
	.page-heading-title
		font-family "Elizabeth"
		font-size 100px
		line-height 100px
		color #4A4A4A
		text-align center

.page-breadcrumbs
	margin-bottom 65px
	
	.page-breadcrumbs-item-holder
		vertical-align middle

		display inline-block
		
		&:after
			content "/"
			
			vertical-align middle
			margin 0 2px
			
			display inline-block
			
			color #FFF
			font-size 14px
			line-height 1
			
		&:last-child
			&:after
				content none
				
			.page-breadcrumbs-item
				border-bottom none
		
	.page-breadcrumbs-item
		border-bottom 1px solid #FFF

		font-size 14px
		line-height 1
		color #FFF
		text-decoration none
		
		transition .3s border-bottom-color $transitionAnimation
		
		&:hover
			border-bottom-color transparent
			
.page-cite
	margin 95px 0 50px 0
	
	opacity 0

	font-family "ElizabethItalic"
	font-size 44px
	color #4A4A4A
	line-height 54px
	
	transition .3s opacity $transitionAnimation

	.page-cite-inner
		padding 0
		
	&.animated
		opacity 1
		
.page-description
	margin 50px 0
	
	overflow hidden
	
	opacity 0
	
	transition .3s opacity $transitionAnimation
	
	.page-description-inner
		float right

		width 60%
		
	&.animated
		opacity 1
		
.page-menu
	padding 25px 0

	background-color #BAA079
	
	text-align center
	
	.page-menu-item-holder
		vertical-align middle
		margin 0 35px
		
		display inline-block
		
	.page-menu-item
		display block
		padding 5px 0
		
		border-bottom 1px solid transparent
		
		text-decoration none
		color #FFF
		font-size 18px
		line-height 1
		
		transition border-bottom-color .3s $transitionAnimation
		
		&:hover
			border-bottom-color #FFF
/*** //Intro ***/


/*** Sections ***/
.sections
	overflow hidden

.section-item
	position relative

	box-sizing border-box
	display block
	width 50%
	overflow hidden

	&:after
		content ""

		display block
		padding-top 72%

	&:first-child
		float left

	&:last-child
		float right

	.section-item-photo-holder
		position absolute
		left 0
		top 0

		display block
		width 100%
		height 100%
		overflow hidden

		background-size cover
		background-repeat no-repeat
		background-position center center

		transition transform .6s $transitionAnimation, opacity .6s $transitionAnimation

		&:before
			content ""

			position absolute
			left 0
			top 0

			display block
			width 100%
			height 100%

			background-color rgba(0, 0, 0, 0)

			transition background-color .6s $transitionAnimation

	.section-item-title
		position absolute
		top 50%
		transform translateY(-50%)

		box-sizing border-box
		display block
		width 100%
		padding 0 40px

		.section-item-title-top
			position relative
			transform translateY(50px)

			font-family "Elizabeth"
			text-align center
			color #FFF
			font-size 60px
			line-height 1.05

			transition transform .6s $transitionAnimation

		.section-item-title-description
			max-width 50%
			margin 0 auto

			opacity 0
			//transform translateY(10px)

			font-size 16px
			line-height 1.8
			color #FFF
			text-align center

			transition transform .6s $transitionAnimation, opacity .6s $transitionAnimation

	&--shadow
		.section-item-photo-holder
			&:after
				content ""

				position absolute
				left 0
				top 0
				bottom 0
				right 0

				display block

				background-color rgba(0, 0, 0, 0)

	&--bottom
		.section-item-title
			left 0
			top auto
			bottom 40px
			transform none

			.section-item-title-top
				margin-bottom 0
				top 0
				transform translateY(0)

				font-size 44px
				line-height 1.1
				text-align left

	&:hover
		.section-item-photo-holder
			transform scale(1.05)

			&:before
				background-color rgba(0, 0, 0, 0.3)

		.section-item-title
			.section-item-title-top
				transform translateY(-10px)

			.section-item-title-description
				opacity 1
				transition-delay .3s

	&--bottom
		&:hover
			.section-item-title
				.section-item-title-top
					transform translateY(0)
/*** //Sections ***/


/*** Cats ***/
.cats
	font-size 0
	
	background-color #282828

.cat-item
	position relative

	box-sizing border-box
	display inline-block
	width (100/3)%
	overflow hidden

	text-decoration none

	&:after
		content ""

		display block
		padding-top 70%

	.cat-item-bg
		position absolute
		left 0
		top 0
		z-index 10

		display block
		width 100%
		height 100%

		background-position center center
		background-repeat no-repeat
		background-size cover

		transition transform .6s $transitionAnimation, opacity .6s $transitionAnimation

		&:before
			content ""

			position absolute
			left 0
			top 0

			display block
			width 100%
			height 100%

			background-color rgba(0, 0, 0, 0.4)

	.cat-item-inner
		position absolute
		left 30px
		top 30px
		right 30px
		bottom 30px
		z-index 20

	.cat-item-section
		position absolute
		left 0
		top 0

		display block

		font-size 16px
		color #FFF
		text-transform uppercase
		letter-spacing 2px

	.cat-item-title
