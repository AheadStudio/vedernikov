//Justify alignment
.justify-alignment
	text-align justify
	font-size 0
	
	&:before
		content ''

		margin-bottom -1.2em

		display block
		width 100%
	&:after
		content ''

		display inline-block
		width 100%

.justify-item
	position relative
	top 1.2em
	vertical-align top

	display inline-block

	&--bottom
		vertical-align bottom

	&--top
		vertical-align top

	&--middle
		vertical-align middle
////Justify alignment



//Hide text
hide-text()
	color transparent
	text-indent -9999px
////Hide text

.row
	box-sizing border-box
	width 100%
	clearfix()
	
	&--relative
		position relative

	.col
		&--left
			float left

		&--right
			float right

		for w in (1..100)
			&--{w}
				width w + '%'
				
		for mr in (1..100)
			&--mr{mr}
				margin-right mr + '%'
				
		for ml in (1..100)
			&--ml{ml}
				margin-left ml + '%'
				

.svg-container
	display inline-block

	font-size 0

	svg
		vertical-align middle

		display block
		width 100%
		height auto
		max-width 100%
		max-height 100%

.img-container
	display inline-block

	font-size 0

	img
		vertical-align middle
		
		display inline-block
		max-width 100%
		max-height 100%
		width auto
		height auto