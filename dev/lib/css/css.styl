//Icons
icon(w, h, bpX, bpY, sprite = 'sprite.png')
	&-icon-inner
	&-icon-before:before
	&-icon-after:after
		vertical-align middle

		display inline-block
		width w
		height h

		background url($imagesDir/sprite) no-repeat bpX bpY

	&-icon-before:before
	&-icon-after:after
		content ''

.icon-text
	vertical-align middle

	display inline-block

.transition-icons
	position relative

	.transition-icon-item
		position absolute
		left 50%
		top 50%

		transition opacity .3s cubic-bezier(0.250, 0.460, 0.450, 0.940)
	
		&--over
			opacity 0

		&--out
			opacity 1

	&:hover
		.transition-icon-item
			&--over
				opacity 1

			&--out
				opacity 0
				

.transition-icon
	position absolute
	left 0
	top 0
	
	box-sizing border-box
	display block
	width 100%
	height 100%

	&:before
	&:after
		position absolute
		left 50%
		top 50%
		transform translateX(-50%) translateY(-50%) translateZ(0)
		
		transition opacity .3s cubic-bezier(0.250, 0.460, 0.450, 0.940)
		
	&:before
		opacity 1
		
	&:after
		opacity 0
		
